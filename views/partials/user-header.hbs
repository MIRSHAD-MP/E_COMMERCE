<!-- Header Section Begin -->
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-3 col-lg-2">
                <div class="header__logo">
                    <a href="/" style="text-decoration: none;">
                        <h2>VIETNAM</h2>
                    </a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7" style="text-align: center;">
                <nav class="header__menu">
                    <ul>
                        <li><a href="/" style="text-decoration: none;">Home</a></li>
                        {{#each categories}}
                        <li><a href='/{{this.category_name}}'>{{this.category_name}}</a></li>
                        {{/each}}

                        {{#if user}}
                        <li><a style="font-size: 20px;" href="/myAccount">{{user.name}}</a>
                            <ul class="dropdown">
                                <li><a href="/myAccount">My Account</a></li>
                                <li><a href="/order">Orders</a></li>
                                <li><a href="/contact">Contact</a></li>
                                <li><a href="./logout">logout</a></li>
                            </ul>
                        </li>
                        {{/if}}
                    </ul>
                </nav>
            </div>
            <div class="col-lg-3">
                <div class="header__right">
                    {{#if user}}
                    {{else}}
                    <div class="header__right__auth">
                        <a href="/login"><h6>Sign in</h6></a>
                    </div>
                    {{/if}}
                    <ul class="header__right__widget">
                        <li><span class="icon_search search-switch"></span></li>
                        {{#if user}}
                        <li id="wishlist"><a href="/wishlist"><span class="icon_heart_alt"></span>
                                <div class="tip">{{wishlistCount}}</div>
                            </a></li>
                        <li id="cart"><a href="/cart"><span class="icon_bag_alt"></span>
                                <div class="tip">{{cartCount}}</div>
                            </a></li>
                        {{else}}
                        <li><a href="/login"><span class="icon_heart_alt"></span>
                            </a></li>
                        <li><a href="/login"><span class="icon_bag_alt"></span>
                            </a></li>
                        {{/if}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="canvas__open">
            <i class="fa fa-bars"></i>
        </div>
    </div>
</header>
