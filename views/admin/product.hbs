                    <div class="card-header">
                        <strong class="card-title">Product Data</strong>
                    </div>
                    <div class="card-body">
                        <table class="table" id="table_id">
                            <thead>
                                <tr>
                                    <th>Product Name</th>
                                    <th>Brand Name</th>
                                    <th>Price</th>
                                    <th>Category</th>
                                    <th>Sub Category</th>
                                    <th>Image</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each products}}
                                <tr>
                                    <td>{{this.product_name}}</td>
                                    <td>{{this.brand_name}}</td>
                                    <td>{{this.product_price}}</td>
                                    <td>{{this.product_category}}</td>
                                    <td>{{this.product_subcategory}}</td>
                                    <td><img style="width:50px;height:50px" src="/uploads/{{this.images.[0]}}" alt="">
                                    </td>
                                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                                    <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a></td>
                                </tr>
                                {{/each}}
                            </tbody>
