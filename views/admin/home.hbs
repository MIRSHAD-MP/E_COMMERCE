<script>

    
var xValues = ["PLACED", "PACKED", "SHIPPED", "DELIVERED", "CANCELLED"];
var yValues = [{{placed}},{{packed}},{{shipped}},{{delivered}},{{cancelled}}];
var barColors = ["black", "purple","orange","green","red"];

new Chart("myChart", {
  type: "bar",
  data: {
    labels: xValues,
    datasets: [{
      backgroundColor: barColors,
      data: yValues
    }]
  },
  options: {
    legend: {display: false},
    title: {
      display: true,
      text: "ORDER STATUS 2022"
    }
  }
});
</script>