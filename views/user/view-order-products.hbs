                <div class="col-lg-9 col-md-9">
                    <div class="row">
                        {{#each products}}
                        <div class="col-lg-4 col-md-6">
                            <div class="product__item">
                                <div class="product__item__pic set-bg" data-setbg="/uploads/{{this.product.images.[0]}}">
                                    <ul class="product__hover">
                                        <li><a href="/uploads/{{this.product.images.[0]}}" class="image-popup"><span class="arrow_expand"></span></a></li>
                                    </ul>
                                </div>
                                <div class="product__item__text">
                                    <h6><a href="#">{{this.product.product_name}}</a></h6>
                                    <div class="product__price">Rs. {{this.product.product_price}}</div><br>
                                    <h6>Quantity {{this.quantity}}</h6>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>