                                    <p>160 Pennsylvania Ave NW, Washington, Castle, PA 16101-5161</p>
                                </li>
                                <li>
                                    <h6><i class="fa fa-phone"></i> Phone</h6>
                                    <p><span>7034258252</span><span>9544718132</span></p>
                                </li>
                                <li>
                                    <h6><i class="fa fa-headphones"></i> Support</h6>
                                    <p>mirshadmp50@gmail.com</p>
                                </li>
                            </ul>
                        </div>
                        <div class="contact__form">
                            <h5>SEND MESSAGE</h5>
                            <form action="https://formspree.io/f/mlevrwee" id="my-form" method="post">
                                <input type="text" placeholder="Name" name="text">
                                <input type="email" placeholder="Email" name="email">
                                <input type="website" placeholder="Website" name="website">
                                <textarea type="text" placeholder="Message" name="message"></textarea>
                                <button type="submit" id="my-form-button" class="site-btn">Send Message</button>
                                <p id="my-form-status"></p>
                            </form>
                        </div>
                    </div>
